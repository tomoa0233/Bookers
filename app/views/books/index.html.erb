<body>
<h1>Books</h1>

<table>
 <tr>
  <th>Title</th><th>Body</th>
 </tr>
   <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show",book_path(book.id) %></td>
    <td><%= link_to "Edit",edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy","" %></td>
   </tr>
   <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
 <h6>Title</h6>
 <%= f.text_field :title %>

 <h6>Body</h6>
 <%= f.text_area :body %>
<%=f.submit 'Create Book' %>
<% end %>


